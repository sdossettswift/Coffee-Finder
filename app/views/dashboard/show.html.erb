<div id="main_map"> </div>

<script type="text/javascript">
  var mymap = L.map('main_map').setView([ <%= @current_location["lat"]%>, <%= @current_location["lon"]%>], 15);

  L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1Ijoic2Rvc3NldHRzd2lmdCIsImEiOiJjaXFtaDhuZ3UwMHF0ZnFuaHM2MG8zczdyIn0.IB6aK5Z1t1wTRvQ3QBiLZA', {
    attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, <a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="http://mapbox.com">Mapbox</a>',
    maxZoom: 18,
    id: 'sdossettswift.0m1k88da',
    accessToken: 'pk.eyJ1Ijoic2Rvc3NldHRzd2lmdCIsImEiOiJjaXFtaDhuZ3UwMHF0ZnFuaHM2MG8zczdyIn0.IB6aK5Z1t1wTRvQ3QBiLZA'
}).addTo(mymap);

  L.marker([<%= @current_location["lat"] %>, <%= @current_location["lon"] %>]).addTo(mymap).bindPopup("You Are Here");

  <% @venues.each do |venue| %>
    L.marker([<%= venue["location"]["lat"]%>, <%= venue["location"]["lng"]%>]).addTo(mymap).bindPopup("<%= venue["name"] %>");
  <% end %>
</script>
